          <field name="ASYNC?">await</field>
          <value name="DURATION">
            <block type="number">
              <field name="NUM">3</field>
            </block>
          </value>
          <value name="TO_ATTRS">
            <block type="field_attr_xy">
              <value name="VALUE">
                <block type="number">
                  <field name="NUM">500</field>
                </block>                  
              </value>
              <next><block type="field_attr_rotate">
                <value name="VALUE">
                  <block type="number">
                    <field name="NUM">720</field>
                  </block>                  
                </value>
              </block></next>
            </block>
          </value>
          <value name="EASING">
            <block type="easing"></block>
          </value>
        <next><block type="signal_onevent_send">
          <field name="SPRITE">receiver</field>
          <field name="SIGNAL">移动结束</field>
        </block></next>
        </block></next>
        </block></next>
      </block>
    </next>
  </block>
</xml>