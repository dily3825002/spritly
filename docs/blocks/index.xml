<xml>
  <preload>
    <resource type="texture_packer"
      texture="https://p.ssl.qhimg.com/d/inn/c886d09f/birds.png"
      data="https://s5.ssl.qhres.com/static/5f6911b7b91c88da.json"
    >
    </resource>
    <resource type="image" src="https://p0.ssl.qhimg.com/t01a72262146b87165f.png" id="robot"></resource>
  </preload>
  <block type="signal_new_sprite_as_receiver">
    <field name="SIGNAL">START</field>
    <next>
      <block type="sprite_attrs">
        <value name="SPRITE">
          <block type="sprite">
            <field name="SPRITE">receiver</field>
          </block>
        </value>
        <value name="ATTRS">
          <block type="field_attr_anchor">
            <field name="KEY">anchorX</field>
            <value name="VALUE">
              <block type="number">
                <field name="NUM">0.5</field>
              </block>                  
            </value>
          <next><block type="field_attr_anchor">
            <field name="KEY">anchorY</field>
            <value name="VALUE">
              <block type="number">
                <field name="NUM">0.5</field>
              </block>                  
            </value>
          <next><block type="field_attr_xy">
            <value name="VALUE">
              <block type="number">
                <field name="NUM">100</field>
              </block>                  
            </value>
          <next><block type="field_attr_xy">
            <field name="KEY">y</field>
            <value name="VALUE">
              <block type="number">
                <field name="NUM">300</field>
              </block>                  
            </value>
          <next><block type="field_attr_size">
            <field name="KEY">width</field>
            <value name="VALUE">
              <block type="number">
                <field name="NUM">100</field>
              </block>                  
            </value>
          <next><block type="field_attr_size">
            <field name="KEY">height</field>
            <value name="VALUE">
              <block type="number">
                <field name="NUM">100</field>
              </block>                  
            </value>
          <next><block type="field_attr_bgcolor">
            <value name="VALUE">
              <block type="random_colour_hue"></block>                  
            </value>
          </block></next>
          </block></next>
          </block></next>
          </block></next>        
          </block></next>
          </block></next>
          </block>     
        </value>
        <next><block type="sprite_append_to">
          <value name="SPRITE">
            <block type="sprite">
              <field name="SPRITE">receiver</field>
            </block>
          </value>
        <next><block type="sprite_animate">
          <value name="SPRITE">
            <block type="sprite">
              <field name="SPRITE">receiver</field>
            </block>
          </value> 
          <field name="ASYNC?">await</field>
          <value name="DURATION">
            <block type="number">
              <field name="NUM">3</field>
            </block>
          </value>
          <value name="TO_ATTRS">
            <block type="field_attr_xy">
              <value name="VALUE">
                <block type="number">
                  <field name="NUM">500</field>
                </block>                  
              </value>
              <next><block type="field_attr_rotate">
                <value name="VALUE">
                  <block type="number">
                    <field name="NUM">720</field>
                  </block>                  
                </value>
              </block></next>
            </block>
          </value>
          <value name="EASING">
            <block type="easing"></block>
          </value>
        <next><block type="signal_onevent_send">
          <value name="SPRITE">
            <block type="sprite">
              <field name="SPRITE">receiver</field>
            </block>
          </value>  
          <field name="SIGNAL">移动结束</field>
        </block></next>
        </block></next>
        </block></next>
      </block>
    </next>
  </block>
</xml>